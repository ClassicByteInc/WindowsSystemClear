<Window x:Class="WindowsSystemClear.GUI.NewTargetFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsSystemClear.GUI"
        mc:Ignorable="d"
        Title="NewTargetFileWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel Width="200" DockPanel.Dock="Right">
            <TextBlock TextWrapping="Wrap" Text="选择目标文件（使用{UserProfile}，自动将{UserProfile}换成当前用户目录）" Margin="5" />
            <Button Margin="60,5" Click="Button_Click_3">选择文件夹</Button>
            <TextBox x:Name="targetPath" Margin="5"/>
            <TextBlock Text="描述" Margin="5" FontWeight="Bold"/>
            <TextBox x:Name="descriptionBox" Margin="5"/>

            <Button Margin="5" Click="Button_Click">添加</Button>
            <Button Margin="5" Click="Button_Click_1">移除</Button>
            <Button Margin="5" Click="Button_Click_2">保存</Button>
        </StackPanel>
        <ListBox x:Name="TargetListBox">
        </ListBox>
    </DockPanel>
</Window>
